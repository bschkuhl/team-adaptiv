<svg width="800" height="500" xmlns="http://www.w3.org/2000/svg">
  <rect width="100%" height="100%" fill="#f8fafc"/>
  <rect x="50" y="50" width="700" height="400" fill="#ffffff" stroke="#e2e8f0" stroke-width="2"/>
  <text x="400" y="100" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="#1a365d">Adaptive Learning Framework</text>
  <text x="400" y="130" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#4a5568">Architecture Overview</text>
  
  <!-- Flow diagram elements -->
  <rect x="100" y="180" width="120" height="60" fill="#3182ce" rx="8"/>
  <text x="160" y="215" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">User Input</text>
  
  <rect x="280" y="180" width="120" height="60" fill="#3182ce" rx="8"/>
  <text x="340" y="210" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">Pattern</text>
  <text x="340" y="225" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">Analysis</text>
  
  <rect x="460" y="180" width="120" height="60" fill="#3182ce" rx="8"/>
  <text x="520" y="210" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">Content</text>
  <text x="520" y="225" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">Adaptation</text>
  
  <rect x="640" y="180" width="120" height="60" fill="#3182ce" rx="8"/>
  <text x="700" y="215" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">Feedback</text>
  
  <!-- Arrows -->
  <path d="M220 210 L280 210" stroke="#718096" stroke-width="2" marker-end="url(#arrowhead)"/>
  <path d="M400 210 L460 210" stroke="#718096" stroke-width="2" marker-end="url(#arrowhead)"/>
  <path d="M580 210 L640 210" stroke="#718096" stroke-width="2" marker-end="url(#arrowhead)"/>
  
  <!-- Feedback loop -->
  <path d="M700 180 Q750 150 750 120 Q750 90 400 90 Q150 90 150 150 Q150 180 100 180" stroke="#22c55e" stroke-width="2" fill="none" stroke-dasharray="5,5"/>
  
  <!-- Arrow marker definition -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#718096"/>
    </marker>
  </defs>
  
  <!-- Performance metrics -->
  <rect x="100" y="320" width="600" height="80" fill="#f7fafc" stroke="#e2e8f0" stroke-width="1"/>
  <text x="400" y="345" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#4a5568">Key Performance Indicators</text>
  <text x="200" y="370" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#718096">23% Retention Improvement</text>
  <text x="400" y="370" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#718096">35% Engagement Increase</text>
  <text x="600" y="370" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#718096">18% Faster Completion</text>
</svg>
